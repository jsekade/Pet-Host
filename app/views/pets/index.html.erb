  <thead>
    <tr>
      <th>Name</th>
      <th>Type pet</th>
      <th>Breed</th>
      <th>Age</th>
      <th>Description pet</th>
      <th>Care</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%- @pets.each do |pet| %>
      <tr>
        <td><%= pet.name %></td>
        <td><%= pet.type_pet %></td>
        <td><%= pet.breed %></td>
        <td><%= pet.age %></td>
        <td><%= pet.description_pet %></td>
        <td><%= pet.care %></td>
        <td><%= link_to 'Show', user_pets_path %></td>
        <td><%= link_to 'Edit', edit_user_pet_path(@user, pet) %></td>
        <td><%= link_to 'Destroy', user_pet_path(@user, pet, method: :delete, data: { confirm: 'Â¿Estas seguro?' }) %></td>
      </tr>
    <% end %>
