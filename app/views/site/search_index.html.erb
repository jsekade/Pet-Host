<%= stylesheet_link_tag    'site', media: 'all' %>
<div class="container paddingtop">
  <div class="row">
    <div class="col-md-5">
      <div id="map-container ">
        <div id="map-canvas"></div>
      </div>
      

        <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d12145.933587385933!2d-3.73335475!3d40.44243675!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1ses!2ses!4v1490125778318" width="450" height="450" frameborder="0" style="border:0; border-radius: 20px;" allowfullscreen></iframe> 
    </div>
    <div class="col-md-7 container_center_site">

      <% @users.each do |user| %>
        <div class="media">
          <div class="media-left media-middle">
            <%= image_tag user.avatar.url(:thumb), class: "media-object" %>
          </div>
          <div class="media-body">
            <h4 class="media-heading"><%= user.username%></h4> 
              <div class="media-row">
                <strong>Ciudad:</strong>
                <div class="city">
                  <%= user.city %>
                </div>
              </div>  
                 
              <div class="media-row">
                <div class="street" style="display: none">  <%= user.street %>
                </div>
              </div>    
              <div class="media-row">
                <strong>Alojamiento:</strong>
                <%= user.housing_type%>
              </div>
              <div class="media-row">
                <strong>Acepta:</strong>
                <%= user.welcome_pets %>
              </div>   
              <span class="pull-right buttons">
              <%= link_to 'Ver usuario', user, class: "btn btn-sm btn-primary" %>
              <% if current_user %>
              <%= link_to 'Enviar mensaje', message_user_path(user.id), class: "btn btn-sm btn-primary" %>
              <% else %>
              <button type="button" class="btn btn-sm btn-primary" data-toggle="modal" data-target="#myModal">Enviar mensaje</button>
              <!-- Modal -->
                        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                          <div class="modal-dialog" role="document">
                            <div class="modal-content">
                              <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                <h4 class="modal-title" id="myModalLabel">No conectado</h4>
                              </div>
                              <div class="modal-body">
                                <p>Debes iniciar sesi√≥n para enviar mensajes.</p>
                                <p>Si aun no formas parte de nuestra comunidad, es un buen momento para registrate.</p>
                              </div>
                              <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                                <%= link_to 'Iniciar sesion', new_user_session_path, class: "btn btn-primary pull-rigth" %>
                                 <%= link_to 'Registrarse', new_user_registration_path, class: "btn btn-primary pull-rigth" %>
                              </div>
                            </div>
                          </div>
                        </div>
              <% end %>
          </span>              
          </div>
          
        </div>              
      <% end %>
    </div>
    
  </div>
</div>

