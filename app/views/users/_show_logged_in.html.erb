<div class="container" >
  <h1 class="page-header"><%= @user.username %></h1>
  <div class="row">
  <!-- left column -->
        <div class="col-md-4 col-sm-6 col-xs-12">
          <div class="text-center">
            <%= image_tag @user.avatar.url, class: "avatar img-circle img-thumbnail", style: "max-width: 60%;"%>
          </div>
        </div>
  <!-- info column -->
      <div class="col-md-8 col-sm-6 col-xs-12 personal-info">
        <h3>Personal info</h3>
      <div class="col-lg-8">
        <p>
        <strong>Nombre:</strong>
          <%= @user.name %>
        </p>

        <p>
          <strong>Apellidos:</strong>
          <%= @user.surname %>
        </p>

        <p>
          <strong>Teléfono:</strong>
          <%= @user.telephone %>
        </p>

        <p>
          <strong>Email:</strong>
          <%= @user.email %>
        </p>

        <p>
          <strong>Calle:</strong>
          <%= @user.street %>
        </p>

        <p>
            <strong>Ciudad:</strong>
        <%= @user.city %>
        </p>

        <p>
          <strong>Código postal:</strong>
          <%= @user.postal_code %>
        </p>
      </div>
  </div>
</div>
        <%= link_to 'Añadir mascota', new_user_pet_path(@user)%> |

        <% if @user.pets.size>0%>
          <%= link_to 'Ver mascotas', user_pets_path(@user)%> |
        <% end %>

        <%= link_to 'Ser anfitrion', edit_user_host_path(@user) %> |

        <% if @user.housing_type %>
          <%= link_to 'Ver alojamiento', user_host_path(current_user) %> |
        <% end %>
          <%= link_to 'Ver mensajes', messages_user_path(current_user)%> |
        

        <%= link_to 'Editar', edit_user_path(@user) %> |
        <%= link_to 'Atrás', user_session_path %>


          
    