<%#= stylesheet_link_tag    'signin', media: 'all' %>

<div class="container" >
  <h1 class="page-header">Editar usuario</h1>
  <div class="row">        
    <%= form_for @user do |f| %>
      <% if user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
          <% user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <!-- left column -->
        <div class="col-md-4 col-sm-6 col-xs-12">
          <div class="text-center">
            <%= image_tag @user.avatar.url, class: "avatar img-circle img-thumbnail", style: "max-width: 60%;"%>
            <h6>Upload a different photo...</h6>
            <%= f.file_field :avatar, class: "text-center center-block well well-sm"%>
          </div>
        </div>
      <!-- edit form column -->
      <div class="col-md-8 col-sm-6 col-xs-12 personal-info">
      <h3>Personal info</h3>
      <div class="form-horizontal" role="form">
        <div class="form-group">
            <%= f.label :name, class: "col-lg-3 control-label" %>
          <div class="col-lg-8">
            <%= f.text_field :name, class: "form-control", placeholder: "name"%>
          </div>
        </div>
        <div class="form-group">
            <%= f.label :surname, class: "col-lg-3 control-label" %>
          <div class="col-lg-8">
            <%= f.text_field :surname, class: "form-control", placeholder: "surname"%>
          </div>
        </div>
        <div class="form-group">
            <%= f.label :telephone, class: "col-lg-3 control-label" %>
          <div class="col-lg-8">
            <%= f.text_field :telephone, class: "form-control", placeholder: "telephone"%>
          </div>
        </div>
        <div class="form-group">
            <%= f.label :street, class: "col-lg-3 control-label" %>
          <div class="col-lg-8">
            <%= f.text_field :street, class: "form-control", placeholder: "street"%>
          </div>
        </div>
        <div class="form-group">
            <%= f.label :city, class: "col-lg-3 control-label" %>
          <div class="col-lg-8">
            <%= f.text_field :city, class: "form-control", placeholder: "city"%>
          </div>
        </div>
        <div class="form-group">
            <%= f.label :postal_code, class: "col-lg-3 control-label" %>
          <div class="col-lg-8">
            <%= f.text_field :postal_code, class: "form-control", placeholder: "postal code"%>
          </div>
        </div>
        <div class="form-group">
          <label class="col-md-3 control-label"></label>
          <div class="col-md-8">
            <%= f.submit 'Submit', class: "btn btn-primary"%>
            <%= f.submit 'Cancel', :name => 'cancel', class: "btn btn-default"%>
              <span></span>
          </div>
        </div>
      </div>
  
  
  

<% end %>
</div>
</div>
