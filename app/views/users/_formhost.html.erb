<%= form_for (user) do |f| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :housing_type %>
    <%= f.select(:housing_type) do %>
     <% [['piso', 'piso'], ['apartamento', 'apartamento'], ['chalet adosado', 'chalet adosado'], ['chalet independiente', 'chalet independiente']].each do |c| -%>
    <%= content_tag(:option, c.first, value: c.last) %>
    <% end %>
    <% end %>
  </div>


  <div class="field">
    <%= f.label :housing_description %>
    <%= f.text_area :housing_description %>
  </div>

   <div class="form-group">
    <%= f.label :welcome_pets, class: "col-lg-2 control-label"%>
    <div class="col-lg-10">
    <%= f.select(:welcome_pets, html: { class: 'form-control' }) do %>
     <% [['perro', 'perro'], ['gato', 'gato'], ['pajaro', 'pajaro']].each do |c| -%>
    <%= content_tag(:option, c.first, value: c.last) %>
    <% end %>
    <% end %>
    </div>
  </div>

  <div class="field">
    <%= f.label :price %>
    <%= f.text_field :price %>
  </div>

  <div class="field">
    <%= f.label :availability %>
    <%= f.text_field :availability %>
  </div>

  

  <div class="actions">
    <%= f.submit 'Editar'%>
  </div>
<% end %>
