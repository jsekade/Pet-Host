<%= stylesheet_link_tag    'users', media: 'all' %>
<br>
<div class="container paddingtop">
    <div class="row">
        <!-- Columna de la izquierda -->
      <div class="col-md-3">
        <div class="col-md-12" align="center">
          <%= image_tag @user.avatar.url, class: "img-responsive img-portfolio img-hover container_radius" %>
        </div>
        <div class="col-md-12 ">
          <p class="text-center"><strong><%= @user.username %></strong></p>
        </div>

            <!-- Fin Barra vertical de opciones de mensajes de usuario -->
      </div>
        <!-- Fin de Columna de la izquierda -->

        <!-- Parte central -->
        <div class="col-md-6">
            <div class="col-md-12 container_high">
                <h3 style="text-align: center">Alojamiento de <%= @user.username %> </h3>
            </div>
           
          
            <!-- Inicio del div central parte de información básica -->
            <div class="col-md-12 container_low">
              <div class="col-md-8 col-md-offset-2">
                  
                      <div class="personal-info">
                          <div class="">
                            <br >
                              <label>Ciudad: </label>
                              <span>
                              <%= @user.city %>
                              </span>
                              <br>
                              <label>Tipo vivienda: </label>
                              <span>
                                <%= @user.housing_type %>
                              </span>
                              <br >
                              <label>Descripción: </label>
                              <span>
                                <%= @user.housing_description %>
                              </span>
                              <br >
                              <label>Mascotas aceptadas: </label>
                              <span>
                              <%= @user.welcome_pets %>
                              </span>
                              <br >
                              <label>Precio: </label>
                              <span>
                              <%= @user.price  %>
                              </span>
                              <br >
                              <label>Disponibilidad: </label>
                              <span>
                              <%= @user.availability %>
                              </span>
                              <br>
                              <label>Valoraciones: </label>
                              <br>
                              <span>
                              <% @valorations.each do |valoration| %>
                                <tr>
                                  <td>-<%= valoration.opinion %><br></td>
                                </tr>
                              <% end %>
                              </span>
                              <br >
                              
                              

                              <p class="help-block"></p>
                          </div>
                      </div>  
              </div>
              <div class="col-md-6 container allFormButtons">
                  <div class="col-md-5 col-md-offset-3">
                        <div class="form-group">  
                        <!-- Button trigger modal -->
                          <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
                            Enviar mensaje
                          </button>
                        </div>  
                        <!-- Modal -->
                        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                          <div class="modal-dialog" role="document">
                            <div class="modal-content">
                              <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                <h4 class="modal-title" id="myModalLabel">No conectado</h4>
                              </div>
                              <div class="modal-body">
                                <p>Debes iniciar sesión para enviar mensajes.</p>
                                <p>Si aun no formas parte de nuestra comunidad, es un buen momento para registrate.</p>
                              </div>
                              <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                                <%= link_to 'Iniciar sesion', new_user_session_path, class: "btn btn-primary pull-rigth" %>
                                 <%= link_to 'Registrarse', new_user_registration_path, class: "btn btn-primary pull-rigth" %>
                              </div>
                            </div>
                          </div>
                        </div>
                  </div>
                    
              </div>
               
            </div>
           
            <!-- Fin del div central parte  información básica -->

            <!-- Parte central - lojamiento -->
            <div class="col-md-12">
  
                <div class="col-md-8 col-md-offset-2">
                  
                  <div class="personal-info">
                          <div class="">
                          

                              <p class="help-block"></p>
                    </div>
                </div>  
              </div>
              
                
                <!-- Botones formulario -->
               
            </div>
            <!-- Fin Parte central - enlaces -->
        
      
        </div>  
        <!-- Fin del div de parte central -->
       
            <!-- Fin Barra vertical de opciones del perfil de usuario -->
          </div>
        
    </div>
</div>
