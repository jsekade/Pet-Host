

<p id="notice"><%= notice %></p>

<h1>Messages with <%= @user.username %>  </h1>

<table>
  <thead>
    <tr>
    <th>Body</th>
      <th>Para</th>
      <th colspan="3"></th>
    
  </thead>

  <tbody>

    <% @messages_order.each do |message| %>
      <tr>
        <td><%= message.body %></td> 
        <td><%= message.receiver.username %></td>
        <td><%= link_to 'Show', message %></td>
        <td><%= link_to 'Edit', edit_message_path(message) %></td>
        <td><%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
  
</table>

<br>

<%= render 'form', message: @message %>
<div class="container-fluid">
    <div class="row">
      <div class="col-md-3">
        <div class="row chats-row">
          <div class="col-md-12">
              <% @users.each do |user| %>
              <div class="list-group-item">
                <%= link_to user.username, message_user_path(user.id)%>
                </div>

               <% end %>       
        </div>
      </div>
    </div>
        <div class="col-md-9 current-chat">
            <div class="row chat-toolbar-row">
            
            <div class="row current-chat-area">
                <div class="col-md-12">
                  <% @messages_order.each do |message| %>
                      <ul class="media-list">
                        <li class="media">
                            <div class="media-body">
                                <div class="media">
                                    <a class="pull-left" href="#">
                                        <%= image_tag message.receiver.avatar.url(:thumb), class: "avatar img-circle img-thumbnail" %>

                                    <div class="media-body">
                                      <%= message.body %>
                                      <%= link_to 'Show', message %>
                                      <%= link_to 'Edit', edit_message_path(message) %>
                                      <%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' } %>
                                      <% end %>
                                        <br>
                                       <small class="text-muted">Alex Deo | 23rd June at 5:00pm</small>
                                        <hr>
                                    </div>
                                </div>
                            </div>
                        </li>
                      </ul>  
                </div>
            </div>
            <div class="row current-chat-footer">
            <div class="panel-footer">
                <div class="input-group">
                  <input type="text" class="form-control">
                  <span class="input-group-btn">
                    <button class="btn btn-default" type="button">Send</button>
                  </span>
                </div>
                </div>
            </div>
    </div>
  </div>
</div>
